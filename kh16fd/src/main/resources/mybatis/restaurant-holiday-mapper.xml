<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="restaurantHoliday">
  <insert id="insert">
  	insert into restaurant_holiday(restaurant_id, restaurant_holiday_date) 
  	values(#{restaurantId}, #{restaurantHolidayDate})
  </insert>
  
  <!-- 식당별 휴무일 조회 -->
  <select id="list" resultType="RestaurantHolidayDto">
  	select * from restaurant_holiday 
  	where restaurant_id = #{restaurantId} 
  	order by restaurant_holiday_date desc
  </select>
</mapper>