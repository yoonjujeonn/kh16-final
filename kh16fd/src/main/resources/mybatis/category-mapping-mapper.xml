<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="categoryMapping">

    <!-- 식당 카테고리 매핑 등록 -->
    <insert id="insert">
        insert into category_mapping (
            restaurant_id,
            category_no
        ) VALUES (
            #{restaurantId},
            #{categoryNo}
        )
    </insert>

    <!-- 식당별 매핑 목록 조회 -->
    <select id="selectListByRestaurant" resultType="int">
        select category_no
        from category_mapping
        where restaurant_id = #{restaurantId}
        order category_no asc
    </select>

    <!-- 식당 매핑 전체 삭제 -->
    <delete id="deleteByRestaurant">
        delete from category_mapping
        where restaurant_id = #{restaurantId}
    </delete>

</mapper>
